<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.net.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>


<VBox alignment="CENTER" styleClass="background" prefWidth="540.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManagerDashboardController" spacing="0">

<ImageView fitWidth="540" fitHeight="300">
        <Image url="/view/image/banner.png"/>
</ImageView>
   
<VBox alignment="CENTER" prefWidth="540" spacing="10" styleClass="background">
<Separator/>
<Label fx:id="teamName" styleClass="heading"/>
<Separator/>
</VBox>

<VBox alignment="CENTER" spacing="10" styleClass="background" prefWidth="540">

<ImageView fx:id="jerseyImg" preserveRatio="true" fitWidth="220"/>

<Label fx:id="managerName" visible="false" managed="false"/>


<VBox alignment="CENTER" spacing="0"><HBox alignment="CENTER" spacing="0"><Button fx:id="withdrawteam" text="Withdraw" prefWidth="120" styleClass="button" onAction="#handleWithdraw"/><Button fx:id="manage" text="Manage" prefWidth="120" styleClass="button" onAction="#handleManage"/></HBox><padding><Insets bottom="10"/></padding><HBox alignment="CENTER" spacing="0"></HBox></VBox>


</VBox>



<HBox alignment="CENTER" spacing="0"><Button fx:id="swapteam" text="Swap Team" styleClass="button" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#handleSwap"/><Button fx:id="closeBtn" text="Close" styleClass="button" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#handleclose"/></HBox>


<stylesheets>
        <URL value="@style.css"/>
</stylesheets>

</VBox>
