<VBox alignment="CENTER" styleClass="background" prefWidth="540.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SwapController" spacing="0">

<ImageView fitWidth="540" fitHeight="300">
        <Image url="/view/image/banner.png"/>
</ImageView>


<VBox alignment="CENTER" prefWidth="540" spacing="10" styleClass="background">
<Separator/>
<Label text="Swap Team" styleClass="heading"/>
<Separator/>
<padding><Insets bottom="8"/></padding>
</VBox>


<ListView fx:id="teamsLv"> <placeholder><Label text="No teams available"/></placeholder></ListView>


<VBox alignment="CENTER" spacing="0" ><padding><Insets top="8"/></padding><HBox alignment="CENTER" spacing="0"><Button fx:id="assign" text="Swap" styleClass="button" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#handleassign"/><Button fx:id="cancel" text="Close" styleClass="button" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#handlecancel"/></HBox></VBox>


