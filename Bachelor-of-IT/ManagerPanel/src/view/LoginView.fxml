<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<VBox alignment="CENTER" styleClass="background" prefWidth="540.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <ImageView fitWidth="540" fitHeight="300">
        <Image url="/view/image/banner.png"/>
    </ImageView>

    <VBox alignment="CENTER" prefWidth="540.0" spacing="10">
    <Separator/>
    <Label text="Login" styleClass="heading"/>
    <Separator/>
    <HBox alignment="CENTER" spacing="10">
    <Label text="Manager ID: "/>
    <TextField fx:id="ManagerID"
    onAction="#handleLogin"/>
    </HBox>
    <HBox>
        <Button styleClass="button" prefWidth="270" text="Login" fx:id="Login"  onAction="#handleLogin"/>
        <Button styleClass="button" prefWidth="270" text="Exit" fx:id="Exit" onAction="#handleExit"/>
    </HBox>
    </VBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>